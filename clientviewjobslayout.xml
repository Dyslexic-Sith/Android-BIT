<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:src="@drawable/bitserviceslogo"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:id="@+id/imageView6" android:layout_alignParentStart="true" android:layout_alignParentTop="true"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_marginTop="21dp" android:id="@+id/lvClientJobs" android:layout_height="200dp"
            android:layout_below="@+id/imageView6" android:layout_alignParentStart="true"/>
    <Button
            android:text="@string/sortJobsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSortClientJobsDate"
            android:layout_below="@+id/lvClientJobs" android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>

</RelativeLayout>