<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1">

    <ImageView
            android:src="@drawable/bitserviceslogo"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:id="@+id/imageView5"
    />

    <TextView
            android:text="@string/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="50dp"
            android:labelFor="@+id/etClientUsername"
            android:layout_gravity="center"
            android:textColor="@color/bitBlue"
            android:layout_weight="0.05"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etClientUsername"
            android:hint="@string/enterUsername"
            android:textColor="#163b58"
            android:textColorHighlight="@color/bitRed"
            android:textColorHint="@color/bitRed"/>

    <TextView
            android:text="@string/password"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textColor="@color/bitBlue"
            android:labelFor="@+id/etClientPassword"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="@string/enterPassword"
            android:textColor="@color/bitRed"
            android:id="@+id/etClientPassword"
            android:textColorHint="@color/bitRed"/>

    <Button
            android:text="@string/signIn"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnClientSignIn"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@color/bitBlue"
            android:textColor="@android:color/white"/>

</LinearLayout>