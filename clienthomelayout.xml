<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:src="@drawable/bitserviceslogo"
            android:layout_width="wrap_content"
            android:id="@+id/imageView3" android:layout_alignParentStart="true" android:layout_height="83dp"/>
    <TextView
            android:text="@string/clientWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" android:id="@+id/textView5"
            android:layout_below="@+id/imageView3" android:layout_centerHorizontal="true"/>
    <Button
            android:text="@string/viewJobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:id="@+id/btnClientViewJobs"
            android:layout_below="@+id/textView5" android:layout_centerHorizontal="true"/>
    <Button
            android:text="@string/addJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnClientJobRequest"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/btnClientViewJobs" android:layout_centerHorizontal="true"/>

    <TextView
            android:text="@string/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_alignTop="@+id/imgWebsite" android:layout_alignStart="@+id/textView7"
            android:layout_marginTop="10dp"/>

    <TextView
            android:text="@string/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_alignBottom="@+id/imgEmail" android:layout_alignStart="@+id/textView7"
            android:layout_marginBottom="11dp"/>

    <ImageView
            android:src="@drawable/phoneicon"
            android:layout_marginTop="13dp" android:id="@+id/imgCall"
            android:clickable="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/btnClientJobRequest"
            android:layout_alignStart="@+id/imgEmail"/>

    <ImageView
            android:src="@drawable/email"
            android:id="@+id/imgEmail"
            android:layout_marginTop="12dp" android:clickable="true" android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/imgCall"
            android:layout_alignStart="@+id/imgWebsite"/>

    <ImageView
            android:src="@drawable/website"
            android:layout_height="40dp"
            android:layout_marginTop="17dp" android:id="@+id/imgWebsite"
            android:clickable="true"
            android:layout_width="40dp"
            android:layout_below="@+id/imgEmail"
            android:layout_toStartOf="@+id/textView5"/>

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/imgWebsite" android:layout_alignEnd="@+id/imgWebsite"
            android:layout_marginTop="26dp" android:id="@+id/imgCam1" android:src="@drawable/cameraflat"
            android:clickable="true"/>
    <TextView
            android:text="@string/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_marginEnd="12dp" android:layout_alignTop="@+id/imgCall"
            android:layout_alignEnd="@+id/btnClientViewJobs" android:layout_marginTop="11dp"/>
    <TextView
            android:text="@string/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_alignTop="@+id/imgCam1" android:layout_alignStart="@+id/textView9"
            android:layout_marginTop="11dp"/>
</RelativeLayout>