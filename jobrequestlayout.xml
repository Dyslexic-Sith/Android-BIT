<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:weightSum="1">

    <ImageView
            android:src="@drawable/bitserviceslogo"
            android:layout_width="match_parent"
            android:layout_height="63dp" android:id="@+id/imageView2"
            android:layout_marginTop="12dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_margin="5dp"/>
    <TextView
            android:text="@string/skill"
            android:layout_width="135dp"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:layout_gravity="start"
            android:layout_below="@+id/imageView2" android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp" android:layout_marginTop="5dp"/>
    <Spinner
            android:layout_width="178dp"
            android:layout_height="wrap_content" android:id="@+id/spnSkill"
            android:layout_below="@+id/imageView2" android:layout_toEndOf="@+id/btnSelectDate" android:layout_marginTop="5dp"/>
    <Spinner
            android:layout_width="181dp"
            android:layout_height="wrap_content" android:id="@+id/spnContractor"
            android:layout_alignTop="@+id/textView4" android:layout_toEndOf="@+id/btnSelectDate"/>
    <Button
            android:text="@string/selectDate"
            android:layout_width="153dp"
            android:layout_height="wrap_content" android:id="@+id/btnSelectDate"
            android:layout_marginTop="13dp" android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true" android:layout_marginLeft="5dp"/>
    <TextView
            android:layout_width="128dp"
            android:id="@+id/tvDisplayDate"
            android:layout_weight="0.55" android:layout_height="30dp"
            android:layout_alignBaseline="@+id/btnSelectDate" android:layout_alignBottom="@+id/btnSelectDate"
            android:layout_toEndOf="@+id/btnSelectDate" android:layout_marginStart="13dp"/>
    <TextView
            android:text="@string/selectContractor"
            android:layout_width="154dp"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/textView" android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp" android:layout_alignEnd="@+id/textView"/>
    <TextView
            android:text="@string/describeJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_marginTop="17dp" android:layout_below="@+id/btnSelectDate"
            android:layout_marginLeft="5dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/etJobDescription"
            android:layout_below="@+id/textView6" android:layout_alignStart="@+id/textView6"
            android:layout_marginTop="14dp" android:lines="5" android:layout_alignEnd="@+id/imageView2"
            android:hint="@string/addJob"/>
    <Button
            android:text="@string/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubmitJobRequest" android:layout_below="@+id/etJobDescription" android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"/>
</RelativeLayout>